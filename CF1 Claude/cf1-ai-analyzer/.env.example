# CF1 AI Analyzer Environment Configuration

# Required: Anthropic Claude API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# CF1 Backend Configuration
CF1_BACKEND_URL=http://localhost:3001
WEBHOOK_SECRET=cf1-ai-webhook-secret-key

# Redis Caching Configuration (Performance Optimization)
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=86400

# Service Configuration
MAX_FILE_SIZE_MB=50
SUPPORTED_FORMATS=.pdf,.txt,.docx
LOG_LEVEL=INFO

# Performance Optimization Settings
MAX_WORKERS=4
TIMEOUT_SECONDS=300
RATE_LIMIT_PER_MINUTE=60
MAX_CONTENT_LENGTH=8000
CONCURRENT_CLAUDE_CALLS=3

# Claude Model Configuration
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=2000
CLAUDE_TEMPERATURE=0.1

# Advanced Performance Features
ENABLE_COMPRESSION=true
ENABLE_STREAMING_PDF=true
ENABLE_CONTENT_CHUNKING=true
ENABLE_CONCURRENT_PROCESSING=true