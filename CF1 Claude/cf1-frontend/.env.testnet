# CF1 Frontend - Neutron Testnet Configuration
# Copy this file to .env.local when working with testnet

# Blockchain Configuration
VITE_CHAIN_ID=pion-1
VITE_CHAIN_NAME=Neutron Testnet
VITE_RPC_URL=https://rpc-falcron.pion-1.ntrn.tech
VITE_REST_URL=https://rest-falcron.pion-1.ntrn.tech
VITE_EXPLORER_URL=https://neutron.celat.one/pion-1

# Alternative RPC endpoints (use if primary is down)
# VITE_RPC_URL=https://neutron-testnet-rpc.polkachu.com
# VITE_REST_URL=https://neutron-testnet-api.polkachu.com

# Smart Contract Addresses (update after deployment)
VITE_LAUNCHPAD_CONTRACT_ADDRESS=
VITE_CW20_CODE_ID=

# Network Configuration
VITE_NETWORK=testnet
VITE_ENABLE_TESTNET=true
VITE_ENABLE_MOCK_DATA=false

# Gas Configuration
VITE_GAS_PRICE=0.0053
VITE_GAS_DENOM=untrn
VITE_GAS_ADJUSTMENT=1.3

# Token Configuration
VITE_NATIVE_DENOM=untrn
VITE_NATIVE_DECIMALS=6
VITE_DISPLAY_DENOM=NTRN

# Wallet Configuration
VITE_WALLET_CONNECT_PROJECT_ID=
VITE_ENABLE_KEPLR=true
VITE_ENABLE_LEAP=true
VITE_ENABLE_COSMOSTATION=true

# Feature Flags for Testnet
VITE_ENABLE_TRADING=true
VITE_ENABLE_STAKING=true
VITE_ENABLE_LENDING=true
VITE_ENABLE_AMM=true
VITE_ENABLE_GOVERNANCE=true

# Development Features
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_QUERY_DEVTOOLS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_LOG_LEVEL=debug

# Testnet Faucet Information
VITE_FAUCET_URL=https://discord.gg/neutronorg
VITE_FAUCET_INSTRUCTIONS=Join #testnet-faucet channel and use !faucet <address>

# Backend Configuration (if using local backend for testnet)
VITE_API_BASE_URL=http://localhost:3001
VITE_ENABLE_API_LOGGING=true

# Optional: AI Features (if enabled for testnet)
VITE_GEMINI_API_KEY=
VITE_ENABLE_AI_ASSISTANT=false

# Error Reporting (optional for testnet)
VITE_SENTRY_DSN=
VITE_ENABLE_ERROR_REPORTING=false

# Analytics (optional for testnet)
VITE_ENABLE_ANALYTICS=false

# Security Settings for Testnet
VITE_ENABLE_CSP=false
VITE_ENABLE_HTTPS_ONLY=false